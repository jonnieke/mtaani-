GEMINI_API_KEY=your_gemini_api_key_here
PORT=5000

# Storage selection
# Set to true to use Firestore instead of in-memory storage
USE_FIRESTORE=false

# Firebase Admin credentials
# Option 1: Path to service account JSON (used by Google SDKs)
# GOOGLE_APPLICATION_CREDENTIALS=C:\\path\\to\\serviceAccount.json
# Option 2: Inline JSON string for credentials (preferred on Replit/Render/etc.)
# GOOGLE_APPLICATION_CREDENTIALS_JSON={"type":"service_account",...}


